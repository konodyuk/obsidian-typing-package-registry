{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "repo": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        },
        "required": ["name", "repo", "path"]
      }
    }
  },
  "required": ["packages"]
}
